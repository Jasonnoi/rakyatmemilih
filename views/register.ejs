<!DOCTYPE html>
<head>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="/styleregist.css" />
</head>
<body>
  <div class="container">
    <div class="foto"></div>
    <div class="Signup">
      <h3 class="title">Sign Up</h3>
      <form method="post" action="/register-data">
        <div class="split-form">
          <div class="left">
            <div class="form-group">
              <label class="details">NIK</label>
              <input name="nik" type="text" placeholder="Masukkan NIK Anda" />
            </div>
            <div class="form-group">
              <label class="details">Nama</label>
              <input name="nama" type="text" placeholder="Masukkan Nama Anda" />
            </div>
            <div class="form-group">
              <label class="details">Username</label>
              <input
                name="username"
                type="text"
                placeholder="Masukkan Username Anda"
              />
            </div>
            <div class="form-group">
              <label class="details">Password</label>
              <input
                name="password"
                type="password"
                placeholder="Masukkan Password Anda"
              />
            </div>
            <div class="form-group">
              <label class="details">Email</label>
              <input
                name="email"
                type="text"
                placeholder="Masukkan Email Anda"
              />
            </div>
            <div class="form-group">
              <label class="details">Tanggal Lahir</label>
              <input
                name="tanggallahir"
                type="date"
                placeholder="Masukkan Tanggal Lahir Anda"
              />
            </div>
          </div>
          <div class="right">
            <div class="form-group">
              <label class="details">No. HP</label>
              <input
                name="hp"
                type="text"
                placeholder="Masukkan No Telfon Anda"
              />
            </div>

            <div class="form-group">
              <label class="details">Kelurahan</label>
              <input
                type="text"
                value="Coblong"
                name="kelurahan"
                placeholder="Coblong"
                disabled
              />
            </div>
            <div class="form-group">
              <label for="RW">Pilih RW</label>
              <select id="RW" name="RW">
                <option value="">-- Pilih RW --</option>
                <% for(const row of dataRW) { %>
                  <option value="<%= row.no %>"><%="RW 0" + row.no %></option>
                <% } %>
              </select>
            </div>
            <div class="form-group">
              <label for="rt">Masukan Nomor RT</label>
              <input
                type="text"
                name="rt"
                id="rt"
                value=""
                placeholder=""
              />
            </div>
            <div class="form-group">
              <label class="details">Alamat Lengkap</label>
              <input
                name="alamat"
                type="text"
                placeholder="Masukkan Alamat Anda"
              />
            </div>
            <div class="form-group">
              <label class="details">Upload Foto Profile</label>
              <label class="file">
                <input type="file" name="fotoProfile" id="profileSignup" />
              </label>
            </div>
          </div>
        </div>

        <div class="button">
          <button class="tombol">Simpan</button>
        </div>
      </form>
    </div>
  </div>
</body>
